<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="showAnim"
        android:text="开始播放展示音波图" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="自定义View实现"
        android:textColor="@color/black" />

    <cn.yhsh.surfaceviewmodel.view.ColumnarView
        android:id="@+id/columnar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="#000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="自定义SurfaceView实现"
        android:textColor="@color/black" />

    <cn.yhsh.surfaceviewmodel.view.ColumnarMusicSurfaceView
        android:id="@+id/columnar_surface_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        app:rect_music_color="@color/teal_700"
        app:rect_music_height_max="100dp"
        app:rect_music_height_min="1dp"
        app:rect_music_width="3dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="能量块下将速度设置"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:max="20"
        android:progress="3" />
</LinearLayout>
